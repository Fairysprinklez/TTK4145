#include <pthread.h>
#include <stdio.h>

int variable = 0

int i = 0;

void* threadFunc1(int var){
	for(int i=0; i<1000000; i++){
		var++;	
	}
	return NULL;
}

void* threadFunc2(int var){
        for(int i=0; i<1000000; i++){
                var--;  
        }
        return NULL ;
}

int main(){
	pthread_t thread1;
	pthread_t thread2;
	pthread_create(&thread1, NULL, threadFunc1, variable);
	pthread_create(&thread2, NULL, threadFunc2, variable);

	pthread_join(thread1, NULL);
	pthread_join(thread2, NULL);

	printf("%d", i);
	
	return 0;
}
